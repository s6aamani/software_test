#importing package#
import pandas as pd
import urllib.request

print("This is a software to download images from a textfile")
plaintext_file = input("Please enter the name of the textfile?\n")+".txt" #asking for filename
data = pd.read_csv(plaintext_file, header = None, error_bad_lines=False) #opening file

for index, row in data.iterrows():
    url = row[0]
    filename = url.split('/')[-1] #extracting imagename
    print("Downloading "+filename+" from "+url)
    urllib.request.urlretrieve(url, filename) #Downloading images

